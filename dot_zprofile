#
## Execute command at login before zshrc
#
if [[ -z "$LANG" ]]; then
    export LANG='en_US.UTF-8'
    export LANGUAGE=en_US.UTF-8
fi

export EDITOR=~/bin/EDITOR
export VISUAL=emacsclient
export LC_COLLATE=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_MESSAGES=en_US.UTF-8
export LC_MONETARY=en_US.UTF-8
export LC_NUMERIC=en_US.UTF-8
export LC_TIME=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LESSCHARSET=utf-8

export RUST_SRC_PATH="$(rustc --print sysroot)/share/rust/rust_src"
export GOPATH=$HOME/go
export HOMEBREW_NO_INSECURE_REDIRECT=1
export HOMEBREW_CASK_OPTS=--require-sha
export BAT_THEME=OneHalfDark

# https://kubernetes.io/docs/concepts/configuration/organize-cluster-access-kubeconfig/
unset KUBECONFIG
for file in ~/.kube/config.d/*;do
    KUBECONFIG+="$file:"
    export KUBECONFIG
done

# Eliminate duplicates in *paths
typeset -gU cdpath fpath path manpath path

# Setup path
path=($HOME/.bash-my-aws/bin
      $HOME/.local/bin
      $HOME/.cargo/bin
      $HOME/.krew/bin
      $HOME/bin
      $HOME/go/bin
      $path[@])

export PATH=/usr/local/sbin:/usr/local/bin:$PATH
