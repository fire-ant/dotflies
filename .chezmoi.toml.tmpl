{{- $email := promptString "email" -}}
{{- $name := promptString "name" -}}
{{- $keyid := promptString "GPG KeyID" -}}
{{- $enable_secrets := promptString "Enable templates that require secrets manager? y/n" -}}
[data]
    name = "{{ $name }}"
    email = "{{ $email }}"
    keyid = "{{ $keyid }}"
[data.features]
    secretsmgr = "{{ $enable_secrets }}"
# Enable magit forges
[data.forges]
    type = "github"
    user = "fire-ant"
    url = ""
